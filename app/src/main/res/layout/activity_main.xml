<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.aysenur.firebaselw.GirisEkrani"
    android:background="@drawable/b">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <EditText
            android:id="@+id/sehirgir"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Şehir Gir"

            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ilcegir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="İlçe Gir"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mekan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="mekan gir"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:onClick="tiklendi"
            android:text="EKLE" />

        <Button
            android:id="@+id/btnKonum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="tiklendi"
            android:text="konum bul" />


    </LinearLayout>

</RelativeLayout>
